{application, botbop,[
	{description, "websocket bot server"},
	{vsn, "1"},
	{registered, []},
	{applications, [
		kernel,
		stdlib,
		ssl,
		websocket
	]},
	{ modules, [
		botbop_app,
		botbop_sup,
		botbop_server,
		botbop_auth,
		botbop_room
	]},
	{mod, { botbop_app, [ botbop ]}},
	{env, [
		{ port, 8088 },
		{ cacertfile, "cacert.pem" },
		{ certfile, "cert.pem" },
		{ keyfile, "key.pem" }
	]}
]}.
